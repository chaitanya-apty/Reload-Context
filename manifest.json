{
  "name": "Reload Context",
  "version": "1.0.1",
  "manifest_version" : 2,
  "description": "Reloads Active tab and downloaded extensions",
  "author": "Chaitanya Kumar",
  "background" : {
    "page" : "html/background.html",
    "persistent": false
  },
  "options_ui": {
    "page": "html/options-ui.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_icon": "images/128x128.png"
  },
  "icons" : {
      "16": "images/16x16.png",
      "32": "images/32x32.png",
      "64": "images/64x64.png",
      "128": "images/128x128.png"
  },
  "permissions": [
    "activeTab", 
    "notifications", 
    "contextMenus", 
    "tabs", 
    "management",
    "storage"
  ]
}
